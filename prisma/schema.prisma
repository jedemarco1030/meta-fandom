datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Replace with your Supabase database URL
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  phoneNumber String   @unique
  dateOfBirth DateTime
  username    String   @unique
  email       String   @unique
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
